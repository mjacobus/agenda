<div class="task <%= decorator.object.status %>">
  <div class="title line"><%= link_to decorator.name, task_path(decorator) %></div>
  <div class="description line"><%= decorator.short_description %></div>
  <div class="time"><%= link_to decorator.time, task_path(decorator) %></div>
  <div class="status"><%= decorator.status %></div>

  <div class="actions">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_task_path(decorator), :class => 'btn btn-mini'
    %>

    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      task_path(decorator, :json),
      :method => :delete,
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-mini btn-danger destroy_task',
      remote: true
    %>
  </div>
</div>

